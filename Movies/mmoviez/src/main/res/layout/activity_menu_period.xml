<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.json.MenuPeriod">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@drawable/periodpicker"
            android:onClick="goto1960"
            android:padding="3dp"
            android:layout_height="200dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center"
            android:background="@drawable/yearpicker"
            android:padding="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:onClick="yearpickerintent"
            />
    </LinearLayout>
    <ImageButton
        android:layout_weight="1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:onClick="about"
        android:background="@drawable/aboutme"/>
</LinearLayout>
